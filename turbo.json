{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev:frontend": {
      "dependsOn": ["^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "cache": false
    },
    "build:frontend": {
      "env": [
        "DATABASE_URL",
        "DIRECT_URL",

        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",

        "AUTH_GOOGLE_CLIENT_ID",
        "AUTH_GOOGLE_CLIENT_SECRET",
        "AUTH_TWITTER_CLIENT_ID",
        "AUTH_TWITTER_CLIENT_SECRET",
        "AUTH_TIKTOK_CLIENT_KEY",
        "AUTH_TIKTOK_CLIENT_SECRET",
        "AUTH_APP_REVIEW_USER_EMAIL",
        "AUTH_APP_REVIEW_USER_ID",
        "AUTH_APP_REVIEW_USER_PASSWORD",

        "NEXT_PUBLIC_SENTRY_DSN",
        "SENTRY_AUTH_TOKEN",

        "ENCRYPTION_KEY",

        "HASHING_SECRET",
        "GITHUB_AUTH_TOKEN",

        "NEXT_PUBLIC_APP_ENV",
        "NEXT_PUBLIC_BASE_URL",
        "NEXT_PUBLIC_ROOT_DOMAIN",
        "NEXT_PUBLIC_API_URL",

        "NEXT_PUBLIC_GOOGLE_MAPS_API_KEY",
        "NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN",
        "NEXT_PUBLIC_TINYBIRD_TRACKER_TOKEN",
        "NEXT_PUBLIC_POSTHOG_KEY",

        "SPOTIFY_CLIENT_ID",
        "SPOTIFY_CLIENT_SECRET",
        "STRIPE_API_SECRET_KEY",
        "TINYBIRD_DASHBOARD_TOKEN",
        "LOOPS_API_KEY"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env"]
    },
    "dev:api": {
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "cache": false
    },
    "build:api": {
      "env": [
        "PORT",
        "SENTRY_AUTH_TOKEN",
        "SENTRY_DSN",
        "AUTH_SECRET",
        "NODE_ENV",
        "AUTH_TRUST_HOST",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_REGION",
        "REACTIONS_TABLE_NAME",
        "POSTHOG_API_KEY",
        "STRIPE_API_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "LOOPS_API_KEY",
        "APP_ENV",
        "ENCRYPTION_KEY",
        "APP_FRONTEND_URL",
        "INSTAGRAM_CALLBACK_URL",
        "INSTAGRAM_CLIENT_ID",
        "INSTAGRAM_CLIENT_SECRET",
        "INSTAGRAM_LEGACY_CALLBACK_URL",
        "INSTAGRAM_LEGACY_CLIENT_ID",
        "INSTAGRAM_LEGACY_CLIENT_SECRET",
        "SPOTIFY_CLIENT_ID",
        "SPOTIFY_CLIENT_SECRET",
        "SPOTIFY_REDIRECT_URL",
        "THREADS_CALLBACK_URL",
        "THREADS_CLIENT_ID",
        "THREADS_CLIENT_SECRET",
        "TIKTOK_CALLBACK_URL",
        "TIKTOK_CLIENT_KEY",
        "TIKTOK_CLIENT_SECRET"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env"]
    },
    "start:frontend": {
      "dependsOn": ["build:frontend"],
      "inputs": ["$TURBO_DEFAULT$", ".env"]
    },
    "start:api": {
      "dependsOn": ["build:api"],
      "env": [
        "DATABASE_URL",
        "DIRECT_URL",
        "AUTH_SECRET",
        "NODE_ENV",
        "AUTH_TRUST_HOST",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_REGION",
        "REACTIONS_TABLE_NAME",
        "POSTHOG_API_KEY",
        "STRIPE_API_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "LOOPS_API_KEY",
        "APP_ENV",
        "ENCRYPTION_KEY",
        "APP_FRONTEND_URL",
        "INSTAGRAM_CALLBACK_URL",
        "INSTAGRAM_CLIENT_ID",
        "INSTAGRAM_CLIENT_SECRET",
        "INSTAGRAM_LEGACY_CALLBACK_URL",
        "INSTAGRAM_LEGACY_CLIENT_ID",
        "INSTAGRAM_LEGACY_CLIENT_SECRET",
        "SPOTIFY_CLIENT_ID",
        "SPOTIFY_CLIENT_SECRET",
        "SPOTIFY_REDIRECT_URL",
        "THREADS_CALLBACK_URL",
        "THREADS_CLIENT_ID",
        "THREADS_CLIENT_SECRET",
        "TIKTOK_CALLBACK_URL",
        "TIKTOK_CLIENT_KEY",
        "TIKTOK_CLIENT_SECRET"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env"]
    },
    "db:generate": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "env": ["DATABASE_URL", "DIRECT_URL"]
    },
    "db:migrate": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "env": ["DATABASE_URL", "DIRECT_URL"]
    },
    "dev:db:migrate": {
      "cache": false
    },
    "db:push": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env"]
    }
  }
}
