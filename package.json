{
  "name": "@tryglow/glow",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/tryglow/glow.git",
  "workspaces": [
    "app.*",
    "package.*"
  ],
  "engines": {
    "node": ">=20.10 <21.0.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^9.14.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.3.3",
    "tslib": "^2.8.1",
    "typescript": "5.6.3"
  },
  "dependencies": {
    "turbo": "^2.0.6"
  },
  "scripts": {
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --preview-feature",
    "prod:deploy:prisma": "prisma generate && prisma migrate deploy",
    "prod:build:api": "turbo run build --filter=@tryglow/api",
    "start:api": "turbo run start --filter=@tryglow/api",
    "dev": "turbo watch dev",
    "lint": "turbo lint"
  },
  "packageManager": "npm@10.2.0"
}